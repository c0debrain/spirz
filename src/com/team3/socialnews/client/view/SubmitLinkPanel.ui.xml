<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:spirz="urn:import:com.team3.socialnews.client.view">
	<spirz:RoundedPanel ui:field="roundedPanel" styleName="submitLinkPanel">
	<g:HTMLPanel ui:field="submitLinkPanel" styleName="submitPanelRoot" >
		<g:HTMLPanel styleName="labelWrapper">
			<g:Label styleName="label">Your headline</g:Label>
			<g:Label  ui:field="charactersLeft" styleName="charactersLeft">140</g:Label>
		</g:HTMLPanel>
		<div class="textareaWrapper">
			<g:TextArea ui:field="titleField" styleName="titleField"></g:TextArea>
		</div>
		
		<g:HTMLPanel styleName="labelWrapper">
			<g:Label styleName="label">A good link</g:Label>
			<g:Anchor ui:field="linkTest" styleName="linkTest">test it</g:Anchor>
		</g:HTMLPanel>		
		<div class="textareaWrapper">
			<g:TextBox ui:field="urlField" styleName="urlField"></g:TextBox>
		</div>
		
		<g:Button ui:field="submitButton" addStyleNames="gwt-Button submitButton">Submit</g:Button>
			
		
		<g:HTMLPanel styleName="labelWrapper">
			<g:Label ui:field="errorLabel" styleName="errorLabel"></g:Label>
			<g:Label ui:field="successLabel" styleName="label"></g:Label>
		</g:HTMLPanel>
	</g:HTMLPanel>
	</spirz:RoundedPanel>
</ui:UiBinder> 